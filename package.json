{
  "name": "flexifyui",
  "version": "0.1.0",
  "private": false,
  "description": "Reusable UI components & validation utilities for Next.js & Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./validator": {
      "default": "./dist/validator/index.js",
      "import": "./dist/validator/index.js",
      "require": "./dist/validator/index.js",
      "types": "./dist/validator/index.d.ts"
    },
    "./ui": {
      "default": "./dist/ui/index.js",
      "import": "./dist/ui/index.js",
      "require": "./dist/ui/index.js",
      "types": "./dist/ui/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "next lint"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "next": "15.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
